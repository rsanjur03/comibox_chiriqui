---
// src/components/admin/forms/SeleccionEvento.astro
const { eventos } = Astro.props;
---

<div class="mb-6">
  <label class="block text-gray-300 text-sm font-bold mb-2" for="select-evento">
    1. Seleccione un Evento
  </label>
  <select 
    id="select-evento" 
    class="shadow appearance-none border border-gray-600 bg-gray-700 rounded w-full py-2 px-3 text-white"
    required
  >
    <option value="">-- Seleccione un evento --</option>
    {eventos.map((evento: any) => (
      <option value={evento.id}>
        {new Date(evento.fecha).toLocaleDateString()} - {evento.nombre}
      </option>
    ))}
  </select>
</div>

<style>
  select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%239ca3af' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.5rem center;
    background-repeat: no-repeat;
    background-size: 1.5em 1.5em;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }
</style>