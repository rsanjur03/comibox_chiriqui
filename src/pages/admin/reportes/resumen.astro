---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import AdminHeader from '../../../components/AdminHeader.astro';
import EventSummaryReport from '../../../components/reports/EventSummaryReport';
---

<BaseLayout title="Reporte: Resumen de Evento - COMIBOX Admin">
    <div class="container mx-auto p-4 md:p-8">
        <div class="print:hidden">
            <AdminHeader />
        </div>
        <EventSummaryReport client:load />
    </div>
</BaseLayout>

<style is:global>
    /* Estilos para el reporte */
    #report-page {
        width: 8.5in;
        max-width: 100%;
        min-height: 11in;
        padding: 1rem;
        margin: 1.5rem auto;
        background-color: #374151;
        color: #d1d5db;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        border: 1px solid #4b5563;
    }

    .report-boxer-photo {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border: 3px solid #4b5563;
        border-radius: 0.25rem;
        background-color: #4b5563;
    }

    .pelea-resumen-card {
        border: 2px solid #6b7280;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        background-color: #4b5563;
    }

    /* Estilos de impresi√≥n */
    @media print {
        body {
            background-color: white !important;
            margin: 0;
            padding: 0;
        }

        /* Ocultar TODOS los elementos del layout excepto el reporte */
        header,
        footer,
        nav,
        #main-header,
        #admin-header,
        #admin-submenu,
        #print-controls,
        #selector-container,
        .print\\:hidden {
            display: none !important;
        }

        /* Asegurar que el container no tenga padding */
        .container {
            padding: 0 !important;
            margin: 0 !important;
            max-width: 100% !important;
        }

        #report-page {
            width: 100%;
            min-height: 0;
            margin: 0;
            padding: 1rem;
            box-shadow: none;
            border: none;
            background-color: white !important;
            color: black !important;
        }

        #report-page *,
        #report-page h1,
        #report-page h2,
        #report-page p,
        #report-page td,
        #report-page th,
        #report-page span {
            color: black !important;
            border-color: #6b7280 !important;
        }

        #report-page table {
            border-collapse: collapse;
        }

        #report-page th,
        #report-page td {
            border: 1px solid #6b7280 !important;
        }

        .report-boxer-photo {
            border-color: #6b7280 !important;
            background-color: #f3f4f6;
        }

        .pelea-resumen-card {
            background-color: #f3f4f6 !important;
            border-color: #6b7280 !important;
            page-break-inside: avoid;
        }

        .signature-line {
            border-top: 1px solid black !important;
            margin-top: 2rem;
        }
    }

    /* Estilos para el select dropdown */
    select {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%239ca3af' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.5rem center;
        background-repeat: no-repeat;
        background-size: 1.5em 1.5em;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
    }
</style>
